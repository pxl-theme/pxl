<!-- Grain/Noise Effect -->
{% comment %} <div class="c-extraBackground -viewStaticPageHeight -filterGrainy"></div> {% endcomment %}

<!-- Single Color Background -->
{% comment %} <div class="c-extraBackground -viewStaticPageHeight" style=background-color:var(--colorAccent);mix-blend-mode:color;opacity:.66></div> {% endcomment %}

<!-- Gradient (135deg) Background -->
{% comment %} <div class="c-extraBackground -viewStaticPageHeight -filterGradient" style="--angle:135deg;--1:var(--colorAccent);--2:var(--hue02);"></div> {% endcomment %}

<!-- Rainbow Gradient (135deg) Background -->
<div class="c-extraBackground -viewStaticPageHeight -filterRainbow" style="--angle:135deg;"></div>

<!-- Gradient (Parallel with page flow) Background -->
{% comment %} <div class="c-extraBackground -viewStaticPageHeight -filterGradient" style=--1:var(--colorAccent);--2:var(--hue02)></div> {% endcomment %}

